<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reportes"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewTituloInformeCed"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Cedula:"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textViewtTituloInformeCor"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:text="Correo:"
            android:layout_margin="10dp"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textViewTituloInformeEst"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="Estado:"
            android:layout_margin="10dp"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textViewTituloInformeFec"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:layout_margin="10dp"
            android:textSize="12dp" />


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewInforme"
        android:layout_width="match_parent"
        android:layout_height="530dp">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btnAtrasMost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:background="#000000"
        android:text="Atras"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</LinearLayout>